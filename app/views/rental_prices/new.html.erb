<h1>Configurar preços de locações</h1>
<% if !@messages.nil?  %>
  <div class="alert alert-danger">
    <ul>
      <% @messages.each do |message| %>
        <li><%= message  %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<h2>Filial: <%= @subsidiary.name  %></h2>
<table class='table'>
  <thead>
    <tr>
      <th scope="col"><%= Category.model_name.human %></th>
      <th scope="col"><%= t('daily_rate') %></th>
      <th scope="col"><%= t('daily_car_insurance') %></th>
      <th scope="col"><%= t('daily_third_party_insurance')  %></th>
    </tr>
  </thead>
  <tbody>
<%= form_tag rental_price_subsidiary_path(@subsidiary), method: :post do %>
  <% @rental_prices.each do |category, rental_price| %>
    <tr>
    <%= fields_for 'rental_prices[]', rental_price do |r| %>
      <div class=<%= "rental_price#{category.id}" %>>
        <td><%= category.name %></td>
            <%= r.hidden_field(:category_id, :value=>category.id) %></td>
        <td><%= r.number_field(:daily_rate, class:"daily_rate") %></td>
        <td><%= r.number_field(:daily_car_insurance, class:"car_insurance") %></td>
        <td><%= r.number_field(:daily_third_party_insurance, class:"third_party_insurance") %></td>
    </div>
    <% end %>
    </tr>
  <% end %>
  <tr>
    <td> <%= submit_tag 'Enviar' %></td>
  </tr>
<% end %>
  </tbody>
</table>
