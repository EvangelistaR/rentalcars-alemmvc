<h1>Tabela de preços</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Filial</th>
      <th scope="col">Categoria</th>
      <th scope="col">Preço</th>
    </tr>
  </thead>
  <tbody>
    <% @prices.each do |price| %>
      <tr>
        <td><%= price.subsidiary.name %></td>
        <td><%= price.category.name %></td>
        <td><%= price.daily_rate %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Registrar novo preço', new_price_path, class: 'btn btn-primary' %>
